<div class="page-header">

    <h1>Listing Ebooks</h1>
    <p><div class="contextual" >
      <%= link_to(new_libraryebook_path, class: "btn btn-success") do %>
          New Ebook <i class="icon-plus icon-white"></i>
      <% end %>

    </div> </p>


  <br />
  <br />
  <table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th colspan="1">Name</th>
    <th colspan="1">Author</th>
    <th colspan="1">Genre</th>
    <th colspan="1">Abstract</th>
    <th colspan="1">Loanamount</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <% unless @libraryebooks.empty? %>
        <% @libraryebooks.each do |libraryebook| %>
            <td><%= libraryebook.name  %></td>
            <td><%= libraryebook.author  %></td>
            <td><%= libraryebook.genre  %></td>
            <td><%= libraryebook.abstract  %></td>
            <td><%= libraryebook.loanamount   %></td>
            <td><%#= link_to 'Edit', edit_libraryebook_path(libraryebook)  %>
              <%= link_to(edit_libraryebook_path(libraryebook) , class: "btn btn-small") do %>
                  Edit <i class="icon-edit icon-white"></i>
              <% end %>

              <%= link_to(libraryebook, class: "btn btn-small") do %>
                  Show <i class="icon-show icon-white"></i>
              <% end %>

              <%= link_to(libraryebook, class: "btn btn-small btn-danger", method: :delete, data: { confirm: 'Are you sure?' }) do %>
                  Destroy <i class="icon-trash icon-white"></i>
              <% end %>
            </td>
            </tr>
        <% end %>


        <% else %>
        <td>No ebooks in database...<td>
    <% end %>

    </tbody>
    </table>

    <br />

<%#= link_to 'New Ebook', new_libraryebook_path %>
    <%= link_to(new_libraryebook_path, class: "btn btn-success") do %>
        New Ebook <i class="icon-plus icon-white"></i>
    <% end %>
    </div>

